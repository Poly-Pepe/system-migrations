pipeline {
    agent { label 'test-stand' }

    triggers { pollSCM('* * * * *') }

    environment {
        GIT_URL = 'https://github.com/Poly-Pepe/system-migrations.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${GIT_URL}"
            }
        }

        stage('Test') {
            steps {
                echo "hello from ${BRANCH_NAME}"
            }
        }
    }
}