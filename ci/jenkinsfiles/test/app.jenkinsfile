pipeline {
    agent { label 'test-stand' }

    triggers { pollSCM('* * * * *') }
    options { timestamps () }

    environment {
        GIT_URL = 'https://github.com/Poly-Pepe/system-migrations.git'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.BRANCH_NAME = "${env.GIT_BRANCH}"
                    echo "Checking out branch: ${env.BRANCH_NAME}"
                }
            }
        }

        stage('Test') {
            steps {
                echo "hello from ${env.BRANCH_NAME}"
            }
        }
    }
}
